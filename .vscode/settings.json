{
    "editor.formatOnSave": true,
    "files.associations": {
        "list": "cpp",
        "map": "cpp",
        "vector": "cpp",
        "xhash": "cpp",
        "xtree": "cpp",
        "unordered_map": "cpp",
        "xstring": "cpp"
    },
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ -std=c++20 $fileName -o $fileNameWithoutExt && $fileNameWithoutExt.exe"
        //"cpp": "cd $dir && cl.exe /EHsc /std:c++20 $fileName -Fe$fileNameWithoutExt && $fileNameWithoutExt.exe"
    }
}